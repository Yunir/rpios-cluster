#cloud-config

hostname: rpios-2

system_info:
  default_user:
    name: agent
    sudo: ALL=(ALL) NOPASSWD:ALL

chpasswd:
  expire: false
  list:
  - agent:agent

# Disable password authentication with the SSH daemon
ssh_pwauth: false

ssh_authorized_keys:
  - SET_YOUR_PUBLIC_SSH_KEY

power_state:
  mode: reboot
  message: network setup requirement

